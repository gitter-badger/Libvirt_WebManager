@model Libvirt_WebManager.Areas.Domain.Models.Domain_CPU_Down

<div id="Generalmetadata1235">
    <div class="page-header">
        <h2>
            CPU Details
        </h2>
    </div>
    <div class="row">
        <div class="col-sm-12">
            @using (Ajax.BeginForm(Html.Action(), Html.Controller(), new { Area = Html.Area() }, new AjaxOptions { InsertionMode = InsertionMode.ReplaceWith, UpdateTargetId = "Generalmetadata1235", LoadingElementId = "_Generalmetadata1235_Form_spinner" }))
            {
                @Html.ValidationSummary()
                @Html.HiddenFor(a => a.CpuInfo.Host)
                @Html.HiddenFor(a => a.CpuInfo.Parent)

                <div class="form-group">
                    @Html.LabelFor(a => a.CpuInfo.Cpu_Model)
                    @Html.EnumDropDownListFor(a => a.CpuInfo.Cpu_Model, new { @class = "form-control" })
                    @Html.ValidationMessageFor(a => a.CpuInfo.Cpu_Model)
                </div>

                <div class="form-group">
                    @Html.LabelFor(a => a.CpuInfo.vCpu_Count)
                    @Html.TextBoxFor(a => a.CpuInfo.vCpu_Count, new
               {
                   @class = "form-control",
                   @type = "number",
                   min = 1,
                   step = 1,
                   max = Model.NodeCpuInfo.cpus
               })
                    @Html.ValidationMessageFor(a => a.CpuInfo.vCpu_Count)
                </div>

                <button class="btn btn-primary btn-block">
                    Save
                    @Html.Spinner("_Generalmetadata1235_Form_spinner")
                </button>
            }
        </div>
    </div>
</div>