@model Libvirt_WebManager.Areas.Domain.Models.Domain_Migrate_Down

<div id="hostmigration_form">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title">Migrate Domain</h4>
    </div>
    @using (Ajax.BeginForm(Html.Action(), Html.Controller(), new { Area = Html.Area() }, new AjaxOptions { InsertionMode = InsertionMode.ReplaceWith, UpdateTargetId = "hostmigration_form", LoadingElementId = "_Generalmetadata1235_Form_spinner" }))
            {
        <div class="modal-body">

            @Html.ValidationSummary()
            @Html.HiddenFor(a => a.Domain_Migrate.Host)
            @Html.HiddenFor(a => a.Domain_Migrate.Parent)

            <div class="form-group">
                @Html.LabelFor(a => a.Domain_Migrate.Dst_Domain)
                @Html.DropDownListFor(a => a.Domain_Migrate.Dst_Domain, Model.Hosts, new { @class = "form-control" })
                @Html.ValidationMessageFor(a => a.Domain_Migrate.Dst_Domain)
            </div>
            <div class="form-group">
                @Html.LabelFor(a => a.Domain_Migrate.Delete_On_Src)
                @Html.CheckBoxFor(a => a.Domain_Migrate.Delete_On_Src)
                @Html.ValidationMessageFor(a => a.Domain_Migrate.Delete_On_Src)
            </div>
            <div class="form-group">
                @Html.LabelFor(a => a.Domain_Migrate.Persist_On_Dst)
                @Html.CheckBoxFor(a => a.Domain_Migrate.Persist_On_Dst)
                @Html.ValidationMessageFor(a => a.Domain_Migrate.Persist_On_Dst)
            </div>
        </div>
        <div class="modal-footer">
            <button class="btn btn-primary btn-block">
                Move
                @Html.Spinner("_Generalmetadata1235_Form_spinner")
            </button>
        </div>
    }
</div>
