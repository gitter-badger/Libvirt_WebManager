@model Libvirt_WebManager.ViewModels.Domain.PoolVolume_Selector_Down

<div id="_Partial__Partial_OS_PoolVolume_Selector_Form">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title">Select Storage</h4>
    </div>
    <div class="modal-body">

        <div class="row">
            <div class="col-sm-4">
                <h3>Available Pools</h3>
                @foreach (var item in Model.Pools)
                {
                    var name = item.virStoragePoolGetName();
                    var disabledstring = item.virStoragePoolIsActive() == 0 ? "disabled='disabled'" : "";

                    <a href="@Url.Action("_Partial_OS_Volume_Selector", new {Host = ViewBag.Host, pool = name })" class="btn btn-default btn-block" @disabledstring data-ajax-update="#volumearealistingosupdate" data-ajax-mode="replace" data-ajax="true">
                        @name
                    </a>
                }
            </div>
            <div class="col-sm-8">
                <div id="volumearealistingosupdate">
                    @if (Model.Pools.Any())
                    {
                        @Html.Action("_Partial_OS_Volume_Selector", new { Host = ViewBag.Host, pool = Model.Pools.FirstOrDefault().virStoragePoolGetName() })
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn btn-primary pull-right" data-dismiss="modal" onclick="UpdateSelectors();">
            Done
        </button>
    </div>
</div>
