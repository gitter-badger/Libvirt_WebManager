@model Libvirt.CS_Objects.Storage_Pool
@{
    Libvirt.CS_Objects.Storage_Volume[] vols;
    Model.virStoragePoolListAllVolumes(out vols);
}

<h3>Available Volumes</h3>
<table class="table table-striped table-striped table-responsive table-hover table-condensed table-bordered">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th title="Actual amount of space used by the volume.">Allocation</th>
            <th title="Amount of space the Volume is allowed to grow into.">Capacity</th>
            <th>Type</th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var vol in vols)
        {
            Libvirt._virStorageVolInfo info;
            vol.virStorageVolGetInfo(out info);
            
            <tr>
                <td>@vol.virStorageVolGetName()</td>
                <td>@Libvirt_WebManager.Utilities.String.Formatting.Format((long)info.allocation)</td>
                <td>@Libvirt_WebManager.Utilities.String.Formatting.Format((long)info.capacity)</td>
                <td>@info.type</td>
                <td><a href="#"><span class="glyphicon glyphicon-expand" aria-hidden="true"></span></a></td>
            </tr>
            vol.Dispose();
        }

    </tbody>
</table>
