@model Libvirt_WebManager.ViewModels.Storage.Storage_Pool

<div id="_Partial_CreatePool_Form">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title">Storage Pool<small class="pull-right">@Model.Host</small></h4>
    </div>
    <div class="modal-body">
       
        @using (Ajax.BeginForm(Html.Action(), Html.Controller(), new AjaxOptions { HttpMethod = "Post", UpdateTargetId = "_Partial_CreatePool_Form", InsertionMode = InsertionMode.ReplaceWith, LoadingElementId = "_Partial_CreatePool_Form_spinner" }))
        {
            <div class="row">
                <div class="col-sm-12">

                    @Html.HiddenFor(a => a.Host)

                    @Html.ValidationSummary()
                    <div class="form-group">
                        @Html.LabelFor(a => a.name)
                        @Html.TextBoxFor(a => a.name, new { @class = "form-control" })
                        @Html.ValidationMessageFor(a => a.name)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(a => a.pool_type)
                        @Html.EnumDropDownListFor(a => a.pool_type, new { @class = "form-control" })
                        @Html.ValidationMessageFor(a => a.pool_type)
                    </div>

                    <button class="btn btn-primary pull-right">
                        Next
                        @Html.Spinner("_Partial_CreatePool_Form_spinner")
                    </button>

                </div>
            </div>
        }
    </div>
    <div class="modal-footer">

    </div>
</div>


