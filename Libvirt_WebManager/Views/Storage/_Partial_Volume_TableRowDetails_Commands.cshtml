@model Libvirt_WebManager.ViewModels.Storage.Storage_Volume_Details
@{
    Libvirt._virStorageVolInfo info;
    Model.Volume.virStorageVolGetInfo(out info);
    var name = Model.Volume.virStorageVolGetName();
    var someuiniqueid = "Volume_Details_" + name.Replace(".", "");
}


<div class="row" id="@(someuiniqueid)_Commands">
    <div class="col-sm-12">

        <a class="btn btn-xs btn-success" title="Resize Volume: Grow or shrink the volume" href="#"><i class="fa fa-expand"></i></a>
        <a class="btn btn-xs btn-info" title="Download the volume" href="#"><i class="fa fa-download"></i></a>
        <span> | </span>
        <a class="btn btn-xs btn-warning" title="Upload data into the volume" href="#"><i class="fa fa-upload"></i></a>
        <span> | </span>
        <a title="Delete Volume" href="@Url.Action("_Partial_Delete_Volume", "Storage", new {Host = Model.Host, Pool = Model.Parent, Volume = name })" class="btn btn-xs btn-danger" data-ajax-update="#@someuiniqueid" data-ajax-mode="replace-with" data-ajax="true"  data-ajax-confirm="Are you sure that you want to delete this volume? This operation is non recoverable!">
            <i class="fa fa-trash"></i>
        </a>
        <a class="btn btn-xs btn-warning" title="Wipe Volume: This will set all data to zero's'" href="#"><i class="fa fa-eraser"></i></a>
    </div>
</div>
